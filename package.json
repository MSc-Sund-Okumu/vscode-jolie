{
  "name": "vscode-jolie",
  "displayName": "Jolie Language Support",
  "description": "Language support for the Jolie programming language (https://jolie-lang.org)",
  "version": "2.0.0",
  "license": "MIT",
  "icon": "images/icon.png",
  "author": {
    "name": "Fabrizio Montesi",
    "email": "famontesi@gmail.com",
    "url": "https://fabriziomontesi.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jolie/vscode-jolie"
  },
  "publisher": "jolie",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "taskDefinitions": [
      {
        "type": "run"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+n",
        "when": "!isMac",
        "command": "workbench.action.tasks.runTask",
        "args": "run"
      },
      {
        "key": "cmd+alt+n",
        "when": "isMac",
        "command": "workbench.action.tasks.runTask",
        "args": "run"
      }
    ],
    "languages": [
      {
        "id": "jolie",
        "aliases": [
          "Jolie",
          "jolie"
        ],
        "extensions": [
          ".ol",
          ".iol"
        ],
        "configuration": "./language-configuration.json",
        "firstLine": "^#!/.*\\bjolie\\b",
        "icon": {
          "light": "./images/jolie-icon-light.png",
          "dark": "./images/jolie-icon-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "jolie",
        "scopeName": "source.jolie",
        "path": "./syntaxes/jolie.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Jolie",
      "properties": {
        "jolie.languageServer.showDebugMessages": {
          "type": "boolean",
          "description": "Show debug messages from the Jolie Language Server in the Extensions Output Panel",
          "default": "false"
        },
        "jolie.languageServer.tcpPort": {
          "type": "number",
          "description": "The TCP port used by the Jolie Language Server",
          "default": 9743
        }
      }
    }
  },
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:jolie"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "dependencies": {
    "@vscode/vsce": "3.1.0",
    "lookpath": "^1.2.2",
    "semver": "^7.6",
    "vscode-languageclient": "8.2.0-next.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@tsconfig/recommended": "^1.0.7",
    "@types/node": "^20.16.5",
    "@types/semver": "7.5.x",
    "@types/vscode": "1.x",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "typescript": "^5.6",
    "typescript-eslint": "^8.5.0"
  }
}
